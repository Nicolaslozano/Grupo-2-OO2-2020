<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class  name="modelo.Producto" table="producto">
		<id column="idProducto"  name="idProducto">
			<generator class="identity" />
		
		</id>
		<property column="nombre" name="nombre" type="string" />
		<property column="descripcion" name="descripcion" type="string" />
		<property column="precio" name="precio" type="float" />
		<property column="fechaAlta" name="fechaAlta" type="LocalDate" />
		
		
		<one-to-one  name="pedido" class="modelo.Pedido"></one-to-one>
		




	</class>
</hibernate-mapping>