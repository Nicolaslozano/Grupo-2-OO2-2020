<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<class name=modelo.Pedido" table="pedido">
		<id column="idPedido" name="idPedido">
			<generator class="identity"/>
		</id>
		<property cloumn="producto" name="producto" type="Producto"/>
		<property cloumn="cantidad" name="cantidad" type="int"/>
		<property cloumn="local" name="Local" type="Local"/>
		<property cloumn="cliente" name="cliente" type="Cliente"/>
		<property cloumn="vendedorOriginal" name="vendedorOriginal" type="Empleado"/>
		<property cloumn="vendedorAuxiliar" name="vendedorAuxiliar"  type="Empleado"/>
		<property cloumn="subtotal" name="subtotal" type="float"/>
		<property cloumn="aceptado" name="aceptado" type="boolean"/>
		
	
	
	<one-to-one name="carrito" class="modelo.Carrito" ></one-to-one>







	</class>
</hibernate-mapping>