<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<class name="modelo.Pedido" table="pedido">
		<id column="idPedido" name="idPedido">
			<generator class="identity"/>
		</id>
		<property cloumn="producto" name="producto" type="Producto"/>
		<property cloumn="cantidad" name="cantidad" type="int"/>
		<property cloumn="subtotal" name="subtotal" type="float"/>
		<property cloumn="aceptado" name="aceptado" type="boolean"/>

		<one-to-one name="producto" class="modelo.Producto" ></one-to-one>
		<one-to-one name="cliente" class="modelo.Cliente" ></one-to-one>
		<one-to-one name="vendedorOriginal" class="modelo.Empleado" column="idEmpleado_original"></one-to-one>
		//WIP

	</class>

</hibernate-mapping>