<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>

	<class name="modelo.Pedido" table="pedido">
		<id column="idPedido" name="idPedido">
			<generator class="identity"/>
		</id>

		<property column="cantidad" name="cantidad" type="int"/>
		<property column="aceptado" name="aceptado" type="boolean"/>
		<one-to-one name="producto" class="modelo.Producto" ></one-to-one>
		<one-to-one name="cliente" class="modelo.Cliente" ></one-to-one>
		<many-to-one name="vendedorOriginal" class="modelo.Empleado" column="id_vendedor_original"/>
		<many-to-one name="vendedorAuxiliar" class="modelo.Empleado" column="id_vendedor_auxiliar"/>

	</class>

</hibernate-mapping>