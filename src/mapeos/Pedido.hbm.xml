<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">


<hibernate-mapping>
	<class name="modelo.Pedido" table="pedido">
		<id column="idPedido" name="idPedido">
			<generator class="identity"/>
		</id>

		<property column="cantidad" name="cantidad" type="int"/>
		<property column="subtotal" name="subtotal" type="float"/>
		<property column="aceptado" name="aceptado" type="boolean"/>

		<one-to-one name="producto" class="modelo.Producto" ></one-to-one>
		<one-to-one name="cliente" class="modelo.Cliente" ></one-to-one>

		<set name="empleados" cascade="save-update" table="empleado" order-by="idPersona asc" inverse="true"
		lazy="true" fetch="select">
			<key column="idPedido" not-null="true"/>
			<one-to-many class="modelo.Empleado"/>
		</set>

	</class>

</hibernate-mapping>