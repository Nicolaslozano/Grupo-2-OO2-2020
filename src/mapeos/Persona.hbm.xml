<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class name="modelo.Persona" table="persona">
		<id column="idPersona" name="idPersona">
		<generator class="identity"/>
		</id>
		<property name="apellido" column="apellido" type="string"/>
		<property name="fechaNacimiento" column="fechaNacimiento" type="LocalDate"/>
		<property name="nombre" column="nombre" type="string"/>
		<property name="dni" column="dni" type="int"/>

		<joined-subclass name="modelo.Cliente" table="cliente">
			<key column="idPersona" />
			<property column="email" name="email" type="string"/>
		</joined-subclass>

		<joined-subclass name="modelo.Empleado" table="empleado">
			<key column="idPersona" />
			<property column="franjaHoraria" name="franjaHoraria" type="string"/>
			<property column="tipoEmpleado" name="tipoEmpleado" type="boolean"/>

			<set name="local" cascade="save-update" table="local" order-by="idLocal asc" inverse="true"
						lazy="true" fetch="select">
							<key column="idPersona" not-null="true"/>
							<one-to-many class="modelo.Local"/>
						</set>
		</joined-subclass>
	</class>
</hibernate-mapping>