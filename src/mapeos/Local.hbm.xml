<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="modelo.comercio" table="local">
		<id column="idLocal" name="idLocal">
			<generator class="identity" />
		</id>
		<property column="direccion" name="direccion" type="string" />
		<property column="latitud" name="direccion" type="double" />
		<property column="longitud" name="longitud" type="float" />
		<property column="telefono" name="telefono" type="double" />

		<one-to-one name="stock" class="modelo.Stock" />

		<set name="solicitudes" table="solicitudStock"
			order-by="idSolicitud" inverse="true" lazy="true" fetch="select">
			<key column="idLocal" not-null="true" />
			<one-to-many class="modelo.SolicitudStock" />

		</set>





		<set name="empleados" table="empleado" order-by="dni"
			inverse="true" lazy="true" fetch="select">
			<key column="idLocal" not-null="true" />
			<one-to-many class="modelo.Empleado" />
		</set>

		<set name="factura" table="factura" order-by="idFactura"
			inverse="true" lazy="true" fetch="select">
			<key column="idLocal" not-null="true" />
			<one-to-many class="modelo.Factura" />
		</set>




	</class>
</hibernate-mapping>