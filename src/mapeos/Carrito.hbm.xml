<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">

<hibernate-mapping>
	<class name="modelo.Carrito" table="carrito">
		<id column="idCarrito" name="idCarrito">
			<generator class="identity"/>
		</id>
		<property column="fecha" name="fecha" type="LocalDate"/>
		<property column="total" name="total" type="float"/>
		<set name="pedidos" cascade="save-update" table="pedido" order-by="idPedido asc" inverse="true"
		lazy="true" fetch="select">
			<key column="idCarrito" not-null="true"/>
			<one-to-many class="modelo.Pedido"/>
		</set>

	</class>

</hibernate-mapping>