<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<class name="modelo.Carrito" table="carrito">
		<id column="idCarrito" name="idCarrito">
			<generator class="identity"/>
		</id>
		<property column="listaPedidos" name="listaPedidos" type="Pedidos"/>
		<property column="fecha" name="fecha" type="LocalDate"/>
		<property column="total" name="total" type="float"/>
		
	
		
	
	
	</class>


</hibernate-mapping>