<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="modelo.SolicitudStock" table="solicitudStock">
		<id column="idSolicitud" name="idSolicitud">
			<generator class="identity"/>
		</id>
		<property column="fecha" name="fecha" type="LocalDate"/>
		<property column="cantidad" name="cantidad" type="int"/>
		<property column="aceptado" name="aceptado" type="boolean"/>

		<one-to-one name="producto" class="modelo.Producto" ></one-to-one>

		<many-to-one name="vendedor" class="modelo.Empleado" column="id_vendedor"/>

		<many-to-one name="colaborador" class="modelo.Empleado" column="id_colaborador"/>

	</class>

</hibernate-mapping>