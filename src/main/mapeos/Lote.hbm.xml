<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
	<class name="modelo.Lote" table="lote">
		<id column="idLote" name="idLote">
			<generator class="identity"/>
		</id>

		<property column="cantidadInicial" name="cantidadInicial" type="int"/>
		<property column="cantidadActual" name="cantidadActual" type="int"/>
		<property column="fechaIngreso" name="fechaIngreso" type="LocalDate"/>
		<property column="estado" name="estado" type="boolean"/>

		<one-to-one name="producto" class="modelo.Producto"/>

		<many-to-one name="stock" class="modelo.Stock" column="idStock"/>

	</class>

</hibernate-mapping>