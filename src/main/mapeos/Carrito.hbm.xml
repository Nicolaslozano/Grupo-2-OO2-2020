<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>

	<class name="modelo.Carrito" table="carrito">
		<id column="idCarrito" name="idCarrito">
			<generator class="identity"/>
		</id>
		<property column="fecha" name="fecha" type="LocalDate"/>

		<set name="listaPedidos" cascade="save-update" table="pedido" order-by="idPedido asc" inverse="true"
		lazy="true" fetch="select">
			<key column="idCarrito" not-null="true"/>
			<one-to-many class="modelo.Pedido"/>
		</set>

	</class>

</hibernate-mapping>