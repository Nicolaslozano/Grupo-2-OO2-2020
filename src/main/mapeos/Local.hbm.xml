<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
	<class name="modelo.Local" table="comercio">
		<id column="idLocal" name="idLocal">
			<generator class="identity"/>
		</id>
		<property column="direccion" name="direccion" type="string" />
		<property column="latitud" name="latitud" type="double" />
		<property column="longitud" name="longitud" type="double" />
		<property column="telefono" name="telefono" type="long" />

		<one-to-one name="stock" class="modelo.Stock" cascade="all"/>

		<set name="listaSolicitudesStock" table="solicitudStock"
			order-by="idSolicitud asc" inverse="true" lazy="true" fetch="select">
			<key column="idLocal" not-null="true" />
			<one-to-many class="modelo.SolicitudStock" />

		</set>

		<set name="listaEmpleados" table="empleado" order-by="idPersona asc"
			inverse="true" lazy="true" fetch="select">
			<key column="idLocal" not-null="true" />
			<one-to-many class="modelo.Empleado" />
		</set>

		<set name="listaFacturas" table="factura" order-by="idFactura asc"
			inverse="true" lazy="true" fetch="select">
			<key column="idLocal" not-null="true" />
			<one-to-many class="modelo.Factura" />
		</set>

	</class>

</hibernate-mapping>